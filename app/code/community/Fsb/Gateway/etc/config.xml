<config>
    <modules>
        <Fsb_Gateway>
            <version>0.0.1</version>
        </Fsb_Gateway>
    </modules>
    <global>
        <models>
            <gateway>
                <class>Fsb_Gateway_Model</class>
            </gateway>
        </models>
        <blocks>
            <gateway>
                <class>Fsb_Gateway_Block</class>
            </gateway>
        </blocks>
        <resources>
            <gateway_setup>
                <setup>
                    <module>Fsb_Gateway</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </gateway_setup>
            <gateway_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </gateway_write>
            <gateway_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </gateway_read>
        </resources>
        <helpers>
            <gateway>
                <class>Fsb_Gateway_Helper</class>
            </gateway>
        </helpers>
    </global>
    <frontend>
        <secure_url>
            <gateway_redirect>/gateway/redirect/</gateway_redirect>
        </secure_url>
        <routers>
            <gateway>
                <use>standard</use>
                <args>
                    <module>Fsb_Gateway</module>
                    <frontName>gateway</frontName>
                </args>
            </gateway>
        </routers>
        <translate>
            <modules>
                <Fsb_Gateway>
                    <files>
                        <default>Fsb_Gateway.csv</default>
                    </files>
                </Fsb_Gateway>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Fsb_Gateway>
                    <files>
                        <default>Fsb_Gateway.csv</default>
                    </files>
                </Fsb_Gateway>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <payment>
            <gateway>
                <active>1</active>
                <model>gateway/checkout</model>
                <title>Brac Bank Payment</title>
                <gateway_wallet>R400572561421</gateway_wallet>
                <order_status>1</order_status>
            </gateway>
        </payment>
    </default>
</config>
